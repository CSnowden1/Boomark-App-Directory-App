{
    "manifest_version": 3,
    "name": "Iphone-like Bookmark Display",
    "version": "1.0",
    "description": "This extension turns your bookmark bar into an iPhone-like display.",
    "permissions": [
        "bookmarks",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Iphone-like Bookmark Display"
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}